on:
  - push
  - pull_request
  - workflow_dispatch

jobs:
  cache-and-install:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - uses: pnpm/action-setup@v4
        name: Install pnpm
        with:
          version: 8
          run_install: false

      - name: Install Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: 'pnpm'

      - name: Install dependencies
        run: pnpm install
		run: node generate_translations.js
		run: pnpm build:prod
	 - name: Create artifact
		run: tar -c ./* -f lemmy-ui.tar

	 - name: Release
        uses: softprops/action-gh-release@v2
		with:
          files: lemmy-ui.tar
